<div class='row login-page'>
  <div class='col-xl-4 col-md-5 col-sm-8 m-auto'>
    <div class='card card-body'>
      {{> message}}
      <h1 class='text-center mt-3'>Login</h1>
      <form action='/users/login' method='POST'>
        <div class='form-group mt-2'>
          <label for='email' class='mt-2'>Email :</label>
          <input type='email' id='email' name='email' class='form-control mt-1' placeholder='Enter Email' />
        </div>
        <div class='form-group mt-2'>
          <label for='password' class='mt-2'>Password :</label>
          <input type='password' id='password' name='password' class='form-control mt-1' placeholder='Enter Password' />
        </div>
        <div class='d-grid gap-2 mt-4'>
          <button type='submit' class='btn btn-info btn-block'>Login</button>
          <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook Login</a>
          <a href="/auth/google" class="btn btn-success btn-block">Google Login</a>
        </div>
      </form>
      <p class='lead mt-4'>
        No Account?
        <a href='/users/register'>Register</a>
      </p>
    </div>
  </div>
</div>