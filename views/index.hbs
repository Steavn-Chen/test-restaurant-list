      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單" />
        我的餐廳清單
      </a>

      <form action="/" method="post">
        <div class="badge  text-wrap" style="width: 12rem; background-color:rgb(247, 159, 76)">
          <span>

            <a href="/restaurants/new"
              style="font-family: 'Comforter', cursive;font-size: 20px;color:rgb(255, 232, 255);letter-spacing: 3px;text-decoration:none"><i
                class="fas fa-cookie-bite "></i> Add Restaurant
              {{!-- <p><i class="bi bi-file-earmark-plus " style="font-size:1.5rem"></i></p> --}}
            </a>
          </span>
          {{!-- {{#ifCond interFaceModel 'list' }}
          <input type="text" name="displayMode" id="" hidden value="card">
          <button type="submit" style="background-color: white;border: none"><i class="fas fa-th"
              style="font-size: 1.5rem;"></i></button>
          {{else}}
          <input type="text" name="displayMode" id="" hidden value="list">
          <button type="submit" style="background-color: white;border: none"><i class="bi bi-list"
              style="font-size: 1.5rem;"></i></button>
          {{/ifCond}} --}}
        </div>
      </form>

    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container my-3">
  <div class="d-flex justify-content-end">
    <form action="/" method="post">
      <div class="mr-2">
        {{#ifCond interFaceModel 'list' }}
        <input type="text" name="displayMode" id="" hidden value="card">
        <button type="submit"
          style="background-color: rgb(113, 223, 243);border: none;border-radius: 5px; color:aliceblue"><i
            class="bi bi-card-list" style="font-size: 1.5rem;"></i></button>
        {{else}}
        <input type="text" name="displayMode" id="" hidden value="list">
        <button type="submit"
          style="background-color: rgb(113, 223, 243);border: none;border-radius: 5px; color:aliceblue;"><i
            class="bi bi-list" style="font-size: 1.5rem;"></i></button>
        {{/ifCond}}
      </div>
    </form>
    <form action="" method="post">
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
          aria-expanded="false">
          select
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="/sort/name/asc">名稱 A->Z</a>
          <a class="dropdown-item" href="/sort/name/desc">名稱 Z->A</a>
          <a class="dropdown-item" href="/sort/category/asc">類別</a>
          <a class="dropdown-item" href="/sort/location/asc">地區</a>
          <a class="dropdown-item" href="/sort/rating/asc">評分由小至大</a>
          <a class="dropdown-item" href="/sort/rating/desc">評分由大至小</a>
        </div>
      </div>
    </form>

  </div>

</div>
<!-- restaurant list -->
{{#ifCond interFaceModel 'list' }}
<div class="container">
  <table class="table table-striped table-hover">
    {{#each restaurants}}
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">category</th>
        <th scope="col">ration</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        {{!-- <th scope="row">1</th> --}}
        <td>{{this.name}}</td>
        <td>{{this.category}}</td>
        <td>{{this.rating}}</td>
        {{!-- <td>{{this.rating}}</td> --}}
        <td>
          <form action="/restaurants/{{this._id}}/?_method=DELETE" method="post">
            <a href="/restaurants/{{this._id}}"><i class="bi bi-card-text mr-2"
                style="font-size: 1.1rem; color:rgb(50, 116, 238);"></i></a>
            <a href="/restaurants/{{this._id}}/edit"><i class="far fa-edit "
                style="font-size: 1.1rem; color:rgb(79, 205, 236);"></i>
            </a>
            <button type="submit"
              style="border: none;background:rgb(241, 241, 241);color:rgb(212, 22, 22);font-size: 1.1rem"><i
                class="bi bi-trash3"></i></button>
          </form>
        </td>
      </tr>
    </tbody>
    {{/each}}
  </table>
</div>

{{else}}
<div class="container mt-5">
  <div class="row row-cols-1 2">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.title}}" />
        </a>
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{this.name}}</h6>

          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i>
            {{this.category}}
          </div>
          <div class="d-flex justify-content-between border border-1 ">
            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
            <span>
              <form action="/restaurants/{{this._id}}/?_method=DELETE" method="post">
                <a href="/restaurants/{{this._id}}"><i class="bi bi-card-text mr-2"
                    style="font-size: 1.1rem; color:rgb(50, 116, 238);"></i></a>
                <a href="/restaurants/{{this._id}}/edit"><i class="far fa-edit "
                    style="font-size: 1.1rem; color:rgb(79, 205, 236);"></i>
                </a>
                <button type="submit"
                  style="border: none;background:rgb(255, 255, 255);color:rgb(212, 22, 22);font-size: 1.1rem"><i
                    class="bi bi-trash3"></i></button>
              </form>
            </span>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
  </div>
</div>
{{/ifCond}}
</div>