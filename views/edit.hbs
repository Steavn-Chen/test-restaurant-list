<div
  class="container new-page mt-5 py-3 rounded"
  style="background-color: rgb(247, 204, 204)"
>
  <h2 class="new-title">編輯餐廳</h2>
  <hr />
  <form action="/restaurants/{{restaurant._id}}/?_method=PUT" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="name">*餐廳名稱</label>
        <input
          type="text"
          class="form-control"
          id="name"
          placeholder="沙沙巴東餐廳"
          name="name"
          required
          value="{{restaurant.name}}"
        />
      </div>
      <div class="form-group col-md-6">
        <label for="phone">*餐廳電話</label>
        <input
          type="text"
          class="form-control"
          id="phone"
          placeholder="02-2222-5555"
          name="phone"
          maxlength="12"
          required
          value="{{restaurant.phone}}"
        />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-5">
        <label for="name_en">餐廳英文名</label>
        <input
          type="text"
          class="form-control"
          id="name_en"
          placeholder="SHASHABA"
          name="name_en"
          value="{{restaurant.name_en}}"
        />
      </div>
      <div class="form-group col-md-4">
        <label for="category">*餐廳類型</label>
        <input
          type="text"
          list="categories"
          class="form-control"
          name="category"
          id="category"
          onkeyup="value=value.replace(/[^\\\a-\z\A-\Z0-9\u4E00-\u9FA5]/g,'')"
          required
          value="{{restaurant.category}}"
        />
        <datalist id="categories">
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>美式</option>
          <option>酒吧</option>
          <option>咖啡</option>
          <option>其他</option>
        </datalist>
      </div>
      <div class="form-group col-md-3">
        <label for="rating">*評分</label>
        <input
          type="number"
          class="form-control"
          id="rating"
          step="0.1"
          min="0"
          max="5"
          name="rating"
          required
          value="{{restaurant.rating}}"
        />
      </div>
    </div>
    <div class="form-group">
      <label for="location">地址</label>
      <input
        type="text"
        class="form-control"
        id="location"
        placeholder="location"
        name="location"
        value="{{restaurant.location}}"
      />
    </div>
    <div class="form-group">
      <label for="image">*圖片網址</label>
      <input
        type="text"
        class="form-control"
        id="image"
        placeholder="image address"
        name="image"
        required
        value="{{restaurant.image}}"
      />
    </div>
    <div class="form-group">
      <label for="google_map">GoogleMap網址</label>
      <input
        type="text"
        class="form-control"
        id="google_map"
        placeholder="Google _Map address"
        name="google_map"
        value="{{restaurant.google_map}}"
      />
    </div>
    <div class="form-group">
      <label for="description">餐廳敍述</label>
      <textarea
        class="form-control"
        id="description"
        rows="3"
        name="description"
      >{{restaurant.description}}</textarea>
    </div>
    <div class="new-btn">
      <button type="submit" class="btn btn-primary">Save</button>
      <button type="reset" class="btn btn-danger">reset</button>
      <a href="/" class="btn btn-secondary">back</a>
    </div>
  </form>
</div>